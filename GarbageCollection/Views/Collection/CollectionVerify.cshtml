
@model BuisnessObject.ViewModel.MainViewModel.CollectionVerificationEntry
@using BussinessLogic.Service
@using BussinessLogic.CustomHelper
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/typeahead.min.js"></script>
<div id='account-pop-up-div' class='modal fade verfier-list' role='dialog'>
</div>
<div class="box  verifier-list-index">
   
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Collection Verifier List</h3>
            <hr>
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>

            </div><!-- /.box-tools -->

            <div class="col-md-12">
               @Html.HiddenFor(x => x.CustId)
                <div class="form-group">
                    @Html.LabelFor(model => model.CollectorId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("CollectorName", null, new { @class = "form-control col-md-6", @id = "CollectorName", @style = "margin-bottom :50px;" })
                        @Html.HiddenFor(x => x.CollectorId)
                        <button type="button" id="search-verify" class="btn btn-search-verify btn-success" data-toggle="tooltip" title="Search"><i class="fa fa-search"></i></button>

                    </div>
                </div>

            </div>
        </div>
        <div class="Collection-List">



            @Html.Partial("_CollectionVerify", Model)



        </div>
    </div>
</div>

<script src="~/Scripts/jquery-message-box.js"></script>
<link href="~/Content/ch-dialog.css" rel="stylesheet" />
<script src="~/Scripts/ch-dialog.js"></script>


<script>

    

    $(function () {
        $('.button-checkbox').each(function () {

            // Settings
            var $widget = $(this),
                $button = $widget.find('button'),
                $checkbox = $widget.find('input:checkbox'),
                color = $button.data('color'),
                settings = {
                    on: {
                        icon: 'glyphicon glyphicon-check'
                    },
                    off: {
                        icon: 'glyphicon glyphicon-unchecked'
                    }
                };
        });
    });
    $("div.collection-verify-list").on('click', 'input.btnPaging', function (e) {
        debugger;
        e.stopImmediatePropagation();
        var parentContainer = $(this).parents()
        var me = $(this);
        var CollectorName = $('#CollectorName').val();

        var container = parentContainer.find("div.collection-verify-list")
        var url = "?CollectorName=" + CollectorName;
        getPageNumberBtnAction(url, container, me)

    });
    $("div.collection-verify-list").on('change', 'input#pageNo', function (e) {
        e.stopImmediatePropagation();
        debugger;
        var parentContainer = $(this).parents()
        var me = $(this);
        var CollectorName = $('#CollectorName').val();

        var container = parentContainer.find("div.collection-verify-list")
        var url = "?CollectorName=" + CollectorName;
        getPageNumberChangeData(url, container, me)
    });
    $("div.collection-verify-list").on('change', 'input#pageSize', function (e) {
        e.stopImmediatePropagation();
        debugger;
        var parentContainer = $(this).parents()
        var me = $(this);
        var CollectorName = $('#CollectorName').val();
        var container = parentContainer.find("div.collection-verify-list")
        var url = "?CollectorName=" + CollectorName;
        getPageSizeChangeData(url, container, me)
    });
    $(".customer-list-index").on('click', '.btn-searchCustomer', function (e) {
        e.stopImmediatePropagation();
        debugger;
        var parentContainer = $(this).parents()
        var me = $(this);
        var customerno = parentContainer.find("#customer-no").find("#CustomerNo").val();
        var name = parentContainer.find("#search-Employee-Name").find("#txtCustomerSearch").val();
        var address = parentContainer.find("#search-Address").find("#txtAddress").val()
        var contact = parentContainer.find("#search-contact").find("#txtContact").val();
        var cType = parentContainer.find('#custtype').find("#ctypeid").val();
        //var accNumber=parentContainer.find('#search-accountNumber').find('#txtaccountNumber').val();

        $.ajax({
            contentType: "html",
            type: "Get",
            url: "/Customer/_List",
            data: { customerno:customerno,name: name, address: address, contact: contact, cType: cType },
            success: function (data) {
                $(".customer-list-index").find("div.Customer-List").html("");
                $(".customer-list-index").find("div.Customer-List").html(data);
            }
        })
    });

  
    $(function () {
        $("#CollectorName").typeahead({

            hint: true,
            highlight: true,
            minLength: 1,
            source: function (request, response) {
                $.ajax({
                    url: '/Collection/GetCollector/',
                    data: "{ 'prefix': '" + request + "'}",
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        items = [];
                        map = {};
                        $.each(data, function (i, item) {
                            var id = item.CollectorID;
                            var name = item.CollectorName;
                            map[name] = { id: id, name: name };
                            items.push(name);
                        });
                        response(items);
                        $(".dropdown-menu").css("height", "auto");
                        //$(".dropdown-menu").css("width", "");
                        $(".dropdown-menu").addClass("col-md-6");
                    },
                    error: function (response) {
                        alert(response.responseText);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    }
                });
            },
            updater: function (item) {
                $('#CollectorId').val(map[item].id);
                return item;
            }
        });
    })

    $('#search-verify').click(function (event) {
        debugger;
        var CollectorName = $('#CollectorName').val();
      
    
            $.ajax({
                url: "/Collection/CollectionVerify",
                type: 'post',
                async: false,
                data: { CollectorName: CollectorName },
                         
                success: function (data) {
                    debugger
                   
                    $('.verifier-list-index').html("");
                    $('.verifier-list-index').html(data);
                 
                  
                }
            })
      
        })
   
</script>